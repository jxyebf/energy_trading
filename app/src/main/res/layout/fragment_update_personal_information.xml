<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_update_back"
            android:tint="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_white_18" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_marginLeft="30dp"
            android:text="Personal Information"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#E8E8E8" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_update_imformation_1"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#E8E8E8"
            />
        <TableLayout
            android:id="@+id/tl_update_personal_information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/view_update_imformation_1"
            >
            <TableRow>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Username "
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_personal_information_username"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="text"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/tl_update_personal_information_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/tl_update_personal_information"
            >
            <TableRow>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Email: "
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_update_personal_information_email"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="textEmailAddress"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/tl_update_personal_information_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/tl_update_personal_information_1">
            <TableRow>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Telephone: "
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_update_personal_information_telephone"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="phone"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/tl_update_personal_information_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/tl_update_personal_information_2">
            <TableRow>
                <TextView
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Post Code: "
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_update_personal_information_address"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:inputType="text"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btn_update_information_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tl_update_personal_information_3"
            android:layout_alignRight="@id/tl_update_personal_information_3"
            android:background="@android:color/holo_orange_dark"
            android:text="UPDATE">

        </Button>

<!--        <Button-->
<!--            android:id="@+id/btn_update_information_cancel"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@id/tl_update_personal_information_3"-->
<!--            android:layout_marginRight="20dip"-->
<!--            android:layout_toLeftOf="@id/btn_update_information_update"-->
<!--            android:background="@android:color/holo_orange_dark"-->
<!--            android:text="CANCEL">-->
<!--        </Button>-->
    </RelativeLayout>
</LinearLayout>