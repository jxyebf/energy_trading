<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_on_list_back"
            android:tint="#FFFFFF"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_white_18" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_marginLeft="30dp"
            android:text="Trade Order Detail"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#E8E8E8" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:id="@+id/on_list_order_detail_tablelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Order Id: "
                    android:textSize="25sp"
                    android:textColor="#2E2E2E"/>
                <TextView
                    android:id="@+id/on_list_order_detail_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="right|center"
                    android:textSize="25sp"/>
            </TableRow>
        </TableLayout>
        <View
            android:id="@+id/on_list_order_detail_view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"
            android:layout_below="@+id/on_list_order_detail_tablelayout"/>
        <TableLayout
            android:id="@+id/on_list_order_detail_tablelayout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/on_list_order_detail_view_1"
            >
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Number: "
                    android:textSize="20sp"
                    android:textColor="#2E2E2E"/>
                <EditText
                    android:id="@+id/on_list_order_detail_number"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="right|center"
                    android:inputType="numberDecimal"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Kwh"
                    />
            </TableRow>
        </TableLayout>
        <View
            android:id="@+id/on_list_order_detail_view_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"
            android:layout_below="@+id/on_list_order_detail_tablelayout_1"/>
        <TableLayout
            android:id="@+id/on_list_order_detail_tablelayout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/on_list_order_detail_tablelayout_1">
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Unit Price: "
                    android:textColor="#2E2E2E"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/on_list_order_detail_unit_price"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/colorAccent"
                    android:gravity="right|center"
                    android:inputType="numberDecimal"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="GBP/Kwh"
                    />
            </TableRow>
        </TableLayout>
        <View
            android:id="@+id/on_list_order_detail_view_3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"
            android:layout_below="@+id/on_list_order_detail_tablelayout_2"/>
        <TableLayout
            android:id="@+id/on_list_order_detail_tablelayout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/on_list_order_detail_view_3">
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Trade Date: "
                    android:textColor="#2E2E2E"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/on_list_order_detail_trade_date"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:id="@+id/on_list_order_detail_tablelayout_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_below="@+id/on_list_order_detail_tablelayout_4">
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left|center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:text="Trade Time: "
                    android:textColor="#2E2E2E"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/on_list_order_detail_trade_time"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="20sp"
                    android:gravity="right|center" />
            </TableRow>
        </TableLayout>
        <View
            android:id="@+id/on_list_order_detail_view_6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"
            android:layout_below="@+id/on_list_order_detail_tablelayout_4"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#E8E8E8" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_update_on_list_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:layout_toLeftOf="@+id/btn_on_list_order_delete"
            android:background="@android:color/holo_orange_dark"
            android:text="Update">
        </Button>
        <Button
            android:id="@+id/btn_on_list_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_orange_dark"
            android:layout_marginRight="20dip"
            android:text="Delete">
        </Button>
    </RelativeLayout>
</LinearLayout>